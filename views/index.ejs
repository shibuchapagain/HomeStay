<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/nav') %>

    <!-- YOUR CONTENT WHAT YOU WANT TO RENDERING -->
    <!--ECO HOME STAY IMAGE-->
    <div
      class="container-fluid"
      style="background-image: url(images/homestay.jpg)"
    >
      <div class="row justify-content-center">
        <div class="col-md-7 mt-5 mb-5 pt-5">
          <div class="row justify-content-evenly">
            <div class="col-md-12 mb-2 pt-2">
              <select
                class="form-select pt-3 pb-3 mt-4 mb-3 bg-light"
                aria-label="Default select example"
              >
                <option selected class="ps-5">Where to Stay</option>
                <option value="1">Pokhara</option>
                <option value="2">Kathmandu</option>
                <option value="3">Chitwan</option>
              </select>
            </div>
            <div class="col-md-3 ps-5 pb-2">
              <input
                class="p-2 bg-light w-100"
                id="datePicker1"
                placeholder="Check In"
                type="text"
              />
            </div>
            <div class="col-md-3 ps-5 pb-2">
              <!-- <input class="p-2" type="date" /> -->
              <input
                class="p-2 bg-light w-100"
                id="datePicker2"
                placeholder="Check Out"
                type="text"
                onmousedown="mousedown"
                onmouseup="mouseup"
              />
            </div>
            <div class="col-md-3 ps-5 pb-2">
              <select
                class="form-select pt-2 pb-2"
                aria-label="Default select example"
              >
                <option selected>Guests</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
              </select>
            </div>
            <div class="col-md-3 ps-5 mb-2 pb-2">
              <button type="button" class="btn btn-danger btn-lg">
                Enquiry
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- </div> -->
    </div>
    <!--ECO HOME STAY IMAGE-->
    <!--FEATURES START-->
    <div class="container-fluid mt-5 mb-5">
      <!-- header name-->
      <div class="row justify-content-evenly text-center">
        <div class="col-md-5 mt-5 mb-3">
          <h2>Featured HomeStay</h2>
        </div>
      </div>
      <!-- header name end-->
      <!--images-->
      <div class="row justify-content-evenly">
        <div class="col-md-11 mt-3">
          <div class="row justify-content-evenly">
            <div class="col-md-3 pt-2 pb-3">
              <img src="images/village1.png" class="img-fluid" alt="village1" />
            </div>
            <div class="col-md-3 pt-2 pb-3">
              <img src="images/village2.png" class="img-fluid" alt="village1" />
            </div>
            <div class="col-md-3 pt-2 pb-3">
              <img src="images/village3.png" class="img-fluid" alt="village1" />
            </div>
            <div class="col-md-3 pt-2 pb-3">
              <img src="images/village4.png" class="img-fluid" alt="village1" />
            </div>
          </div>
        </div>
      </div>
      <!--Images end-->
    </div>
    <!--FEATURES END-->
    <!-- YOUR CONTENT WHAT YOU WANT TO RENDERING -->

    <%- include('./partials/footer') %> <%- include('./partials/features') %>
  </body>
</html>
